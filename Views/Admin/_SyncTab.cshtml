@* Views/Admin/_SyncTab.cshtml *@
<div class="settings-card content-card">
    <h3>Synchronize Country Data</h3>
    <form asp-controller="Admin" asp-action="Sync" method="get">
        <button type="submit" class="save-settings-btn">Sync Country List</button>
    </form>
</div>

<div class="settings-card content-card">
    <h3>Synchronize Holiday Data</h3>
    <form asp-controller="Admin" asp-action="SyncHolidays" method="post">
        <input type="hidden" name="year" value="@DateTime.Now.Year" />
        <button type="submit" class="save-settings-btn">Sync Holidays</button>
    </form>
</div>
