@model dateManagementHTML.Models.Entities.Holiday

@{
    ViewData["Title"] = "Add Holiday";
}

<div class="app-container">
    <div class="main-content">
        <div class="header-section">
            <div class="header-image-text">
                <div class="illustration">
                    <img src="@Url.Content("~/images/settings.png")" alt="Admin Illustration" class="dashboard-illustration" />
                </div>
                <div class="header-text">
                    <h1>Add Holiday</h1>
                </div>
            </div>
        </div>

        <form asp-action="AddHoliday" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryCode"></label>
                <input asp-for="CountryCode" class="form-control" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Add Holiday</button>
        </form>
    </div>
</div>
