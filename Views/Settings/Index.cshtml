@{  
    ViewData["Title"] = "Settings";  
}  

<div class="app-container">  
    <div class="main-content">  
        @if (TempData["Message"] != null)  
        {  
            <div class="alert alert-success">@TempData["Message"]</div>  
        }  

        <div class="header-section">  
            <h1>Settings</h1>  
        </div>  

        <div class="settings-content content-card">  
            @await Html.PartialAsync("_UpdateProfile", ViewData["ProfileModel"])  
            @await Html.PartialAsync("_ChangePassword", ViewData["PasswordModel"])  
            @await Html.PartialAsync("_PreferredCountry", (object)ViewBag.SavedCountry)  
        </div>  
    </div>  
</div>
