@model dateManagementHTML.Models.ViewModels.RegisterViewModel


<div class="login-container">
    <div class="login-card content-card">
        <div class="logo-container">
            <img src="~/images/logo.png" alt="App Logo" class="app-logo">
        </div>
        <h1>Create Account</h1>
        <p class="login-subtitle">Sign up to start organizing your time</p>

        <form asp-action="Register" id="registerForm" class="login-form">
            <div class="form-group">
                <label input asp-for="FirstName" for="firstName">First Name</label>
                <div class="input-with-icon">
                    <i class="fa-solid fa-user"></i>
                    <input asp-for="FirstName" type="text" id="firstName" placeholder="Enter your first name" required>
                </div>
            </div>

            <div class="form-group">
                <label input asp-for="LastName" for="lastName">Last Name</label>
                <div class="input-with-icon">
                    <i class="fa-solid fa-user"></i>
                    <input asp-for="LastName" type="text" id="lastName" placeholder="Enter your last name" required>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email" for="email">Email</label>
                <div class="input-with-icon">
                    <i class="fa-solid fa-envelope"></i>
                    <input asp-for="Email" type="email" id="email" placeholder="Enter your email" required>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" for="password">Password</label>
                <div class="input-with-icon">
                    <i class="fa-solid fa-lock"></i>
                    <input asp-for="Password" type="password" id="password" placeholder="Create a password" required>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" for="confirmPassword">Confirm Password</label>
                <div class="input-with-icon">
                    <i class="fa-solid fa-lock"></i>
                    <input asp-for="ConfirmPassword" type="password" id="confirmPassword" placeholder="Confirm your password" required>
                </div>
            </div>

            <div class="form-options">
                <div class="remember-me">
                    <input asp-for="AgreeToTerms" type="checkbox" id="agreeTerms" required>
                    <label asp-for="AgreeToTerms" for="agreeTerms">I agree to the <a href="#">Terms of Service</a></label>
                </div>
            </div>

            <button type="submit" class="login-btn">Create Account</button>
        </form>

        <div class="login-footer">
            <p>Already have an account? <a asp-controller="Account" asp-action="Login">Sign in</a></p>
        </div>
    </div>

    <div class="login-illustration">
        <img src="~/images/calendar-illustration.png" alt="Calendar Illustration" class="login-illustration-img">
        <div class="illustration-text">
            <h2>Organize Your Time</h2>
            <p>Stay on track with what matters most to you</p>
        </div>
    </div>
</div>