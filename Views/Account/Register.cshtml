@model dateManagementHTML.Models.ViewModels.RegisterViewModel

<h2>Register</h2>
<form asp-action="Register" method="post">
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>

    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
    </div>

    <div>
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" />
    </div>
    <button type="submit">
        Register
    </button>
</form>